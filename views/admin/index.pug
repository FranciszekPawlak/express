extends ../layout

block content
  div(class='admin')
    h1= title
    nav
      ul
        li
          a(href='/admin/news/add') ADD NEWS
    table
      tr
        th id
        th title
        th date
        th action
      each item, index in data
        tr
          td=index
          td=item.title
          td=item.created
          td
            a(href=`/admin/news/delete/${item._id}`) remove
          

